<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTheme"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="3/48"
            android:textColor="#fff"
            android:textSize="@dimen/textSize14" />
        <TextView
            android:id="@+id/tv_save_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_text"
            android:layout_marginLeft="10dp"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="@dimen/textSize14" />
        <ImageView
            android:id="@+id/large_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_large_more_normal"/>
        <ImageView
            android:id="@+id/large_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/large_more"
            android:src="@drawable/ic_large_star"/>
        <ImageView
            android:id="@+id/large_download"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/large_star"
            android:src="@drawable/ic_large_download"/>
        <ImageView
            android:id="@+id/large_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/large_download"
            android:src="@drawable/ic_large_share"/>

    </RelativeLayout>


</RelativeLayout>